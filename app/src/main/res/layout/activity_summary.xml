<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/textViewproducts2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewstock"
        android:text="Tap on a Stock to view products"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/listviewstock2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewproducts2">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/listviewstock2">

        <Button
            android:id="@+id/btn_finished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="view almost out of stock items" />
        <Button
            android:id="@+id/btn_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="request database export" />

    </LinearLayout>

    </RelativeLayout>